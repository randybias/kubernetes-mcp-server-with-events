FROM golang:latest AS builder

WORKDIR /app

# Install golangci-lint using go install (works correctly for cross-platform builds)
RUN go install github.com/golangci/golangci-lint/v2/cmd/golangci-lint@v2.6.1

COPY ./ ./

# Create the expected directory and symlink so Makefile finds golangci-lint
RUN mkdir -p _output/tools/bin && ln -sf $(which golangci-lint) _output/tools/bin/golangci-lint

RUN make build

FROM registry.access.redhat.com/ubi9/ubi-minimal:latest
WORKDIR /app
COPY --from=builder /app/kubernetes-mcp-server /app/kubernetes-mcp-server
USER 65532:65532
ENTRYPOINT ["/app/kubernetes-mcp-server", "--port", "8080"]

EXPOSE 8080
